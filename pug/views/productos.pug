doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        style
            include style.css
    body

        .container.py-5 
            .row 
                .col 
                    p.text-info.display-5 Vista de Productos
                    if bandera 
                        table.table 
                            thead 
                                tr
                                    th Titulo
                                    th Precio
                                    th Foto
                            tbody 
                                each val in productos 
                                    tr 
                                        td #{val.titulo}
                                        td #{val.precio}
                                        td: img.img-fluid.img(src=val.miniatura, alt="", srcset="")
                    else 
                        .alert.alert-info No existen productos cargados

            .row 
                .col 
                    a.btn.btn-info(href="http://localhost:8080/") Nuevo producto
