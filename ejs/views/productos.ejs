<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coder - Entraga5 </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <div class="container py-5">
        <div class="row">
            <div class="col">
                <p class="text-success display-5">Vista de Productos</p>
                
                    <% if (bandera) { %>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Titulo</th>
                                    <th scope="col">Precio</th>
                                    <th scope="col">Foto</th>
                                </tr>
                            </thead>
                            <tbody>

                                <% productos.forEach(producto => { %>
                                    <tr>
                                        <td><%= producto.titulo %></td>
                                        <td><%= producto.precio %></td>
                                        <td><img src="<%= producto.miniatura %>" alt="" class="img-fluid" style="max-height: 50px;"></td>
                                    </tr>
                                <% }) %>
                        
                            </tbody>
                        </table>
                    <% } else { %>
                        <div class="alert alert-info" role="alert">
                            No existen productos cargados
                        </div>
                    <% } %>
                    
            </div>
        </div>
        <div class="row">
            <div class="col">
                <a class="btn btn-success" href="http://localhost:8080/">Nuevo producto</a>
            </div>
        </div>
    </div>
</body>
</html>